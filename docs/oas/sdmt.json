{
  "openapi": "3.0.3",
  "info": {
    "title": "sdmt api specifications",
    "description": "SDMT API Specification",
    "version": "1.0.0",
    "contact": {
      "name": "rinotc"
    }
  },
  "servers": [
    {
      "url": "http://localhost:9000/api",
      "description": "local"
    }
  ],
  "paths": {
    "/bounded-contexts": {
      "post": {
        "summary": "境界づけられたコンテキスト作成",
        "tags": [
          "BoundedContext"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BoundedContextResponse"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "operationId": "post-projects",
        "description": "新規のプロジェクトを作成する",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "description": "境界づけられたコンテキスト名称",
                    "writeOnly": true
                  },
                  "alias": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z]{1,32}$",
                    "minLength": 1,
                    "maxLength": 32,
                    "description": "境界づけられたコンテキストのエイリアス",
                    "writeOnly": true
                  },
                  "overview": {
                    "type": "string",
                    "minLength": 0,
                    "maxLength": 500,
                    "description": "境界づけられたコンテキストの概要",
                    "writeOnly": true
                  }
                },
                "required": [
                  "name",
                  "alias",
                  "overview"
                ]
              }
            }
          },
          "description": "新規プロジェクト情報"
        }
      },
      "get": {
        "summary": "境界づけられたコンテキスト一覧取得",
        "tags": [
          "BoundedContext"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/BoundedContextResponse"
                      }
                    }
                  },
                  "required": [
                    "data"
                  ]
                }
              }
            }
          }
        },
        "operationId": "get-projects",
        "description": "プロジェクト一覧を取得する"
      },
      "parameters": []
    },
    "/bounded-contexts/{boundedContextId}": {
      "parameters": [
        {
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "name": "boundedContextId",
          "in": "path",
          "required": true,
          "description": "境界づけられたコンテキストID"
        }
      ],
      "get": {
        "summary": "境界づけられたコンテキストの取得",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BoundedContextResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "operationId": "get-bounded-contexts-alias",
        "parameters": [],
        "description": "境界づけられたコンテキストIDを元に、プロジェクト情報を取得する",
        "tags": [
          "BoundedContext"
        ]
      }
    },
    "/bounded-contexts/{boundedContextId}/domain-models": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "boundedContextId",
          "in": "path",
          "required": true,
          "description": "境界づけられたコンテキストID"
        }
      ],
      "post": {
        "summary": "ドメインモデル作成",
        "tags": [
          "DomainModel"
        ],
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DomainModelResponse"
                }
              }
            }
          }
        },
        "operationId": "post-bounded-contexts-boundedContextId-domain-models",
        "description": "境界づけられたコンテキストにおけるドメインモデルを作成する",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ubiquitousName": {
                    "type": "string",
                    "maxLength": 50,
                    "description": "ユビキタス名"
                  },
                  "englishName": {
                    "type": "string",
                    "description": "ドメインモデル英語名（境界づけられたコンテキスト内で一意）",
                    "maxLength": 100
                  },
                  "knowledge": {
                    "type": "string",
                    "description": "モデルの知識（Markdown形式）"
                  }
                },
                "required": [
                  "ubiquitousName",
                  "englishName",
                  "knowledge"
                ]
              }
            }
          },
          "description": "新しいドメインモデル"
        }
      },
      "get": {
        "summary": "ドメインモデル一覧",
        "operationId": "get-bounded-contexts-boundedContextId-domain-models",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "description": "境界づけられたコンテキスト内のドメインモデル一覧　",
                      "items": {
                        "$ref": "#/components/schemas/DomainModelResponse"
                      }
                    }
                  },
                  "required": [
                    "data"
                  ]
                }
              }
            }
          }
        },
        "tags": [
          "DomainModel"
        ],
        "description": "境界づけられたコンテキストに属するドメインモデル一覧を取得する"
      }
    },
    "/bounded-contexts/{boundedContextId}/domain-models/{domainModelId}": {
      "parameters": [
        {
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "name": "boundedContextId",
          "in": "path",
          "required": true,
          "description": "境界づけられたコンテキストID"
        },
        {
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "name": "domainModelId",
          "in": "path",
          "required": true,
          "description": "ドメインモデルID"
        }
      ],
      "get": {
        "summary": "ドメインモデル取得API",
        "tags": [
          "DomainModel"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DomainModelResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "operationId": "get-bounded-contexts-boundedContextId-domain-models-domainModelId",
        "description": "IDをもとに、ドメインモデルを取得する"
      },
      "put": {
        "summary": "ドメインモデル更新API",
        "tags": [
          "DomainModel"
        ],
        "responses": {
          "200": {
            "description": "OK 更新後のドメインモデルを返す",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DomainModelResponse"
                }
              }
            }
          }
        },
        "operationId": "put-bounded-contexts-boundedContextId-domain-models-domainModelId",
        "description": "IDをもとに、対象のドメインモデルを更新する"
      },
      "delete": {
        "summary": "ドメインモデル削除",
        "operationId": "delete-bounded-contexts-boundedContextId-domain-models-domainModelId",
        "responses": {
          "204": {
            "description": "No Content"
          }
        },
        "description": "指定したIDのドメインモデルを削除する",
        "tags": [
          "DomainModel"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "BoundedContextResponse": {
        "title": "BoundedContextResponse",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "境界づけられたコンテキストID",
            "format": "uuid",
            "readOnly": true
          },
          "alias": {
            "type": "string",
            "description": "境界づけられたコンテキストエイリアス",
            "example": "ALIAS",
            "minLength": 1,
            "maxLength": 32,
            "pattern": "^[0-9a-zA-Z]{1,32}$"
          },
          "name": {
            "type": "string",
            "description": "境界づけられたコンテキスト名称",
            "minLength": 1,
            "maxLength": 100
          },
          "overview": {
            "type": "string",
            "description": "境界づけられたコンテキスト概要",
            "minLength": 0,
            "maxLength": 500
          }
        },
        "required": [
          "id",
          "alias",
          "name",
          "overview"
        ],
        "x-tags": [
          "BoundedContext"
        ],
        "description": ""
      },
      "ErrorResponse": {
        "title": "ErrorResponse",
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "エラーメッセージ"
          }
        },
        "required": [
          "message"
        ]
      },
      "DomainModelResponse": {
        "title": "DomainModelResponse",
        "type": "object",
        "x-tags": [
          "DomainModel"
        ],
        "description": "ドメインモデルのレスポンス",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ドメインモデルID",
            "readOnly": true
          },
          "boundedContextId": {
            "type": "string",
            "format": "uuid",
            "description": "境界づけられたコンテキストID",
            "readOnly": true
          },
          "ubiquitousName": {
            "type": "string",
            "description": "ユビキタス名",
            "maxLength": 50,
            "readOnly": true
          },
          "englishName": {
            "type": "string",
            "description": "ドメインモデル英語名",
            "maxLength": 100,
            "readOnly": true
          },
          "knowledge": {
            "type": "string",
            "description": "モデルの知識（Markdown形式）",
            "readOnly": true
          }
        },
        "required": [
          "id",
          "boundedContextId",
          "ubiquitousName",
          "englishName",
          "knowledge"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "BoundedContext"
    },
    {
      "name": "DomainModel"
    }
  ]
}