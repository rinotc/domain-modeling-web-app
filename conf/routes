# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                                                         controllers.HomeController.index

POST        /projects                                                 controllers.AddProjectController.addProject()
GET         /projects/add                                             controllers.AddProjectController.addProjectFormPage()
GET         /projects/:projectAlias                                   controllers.ProjectController.findByProjectAlias(projectAlias: String)

POST        /projects/:projectAlias/domain-models                     controllers.AddDomainModelController.addDomainModel(projectAlias: String)
GET         /projects/:projectAlias/domain-models/add                 controllers.AddDomainModelController.addDomainModelFormPage(projectAlias: String)
GET         /projects/:projectAlias/domain-models/:englishName        controllers.DomainModelController.findByEnglishName(projectAlias: String, englishName: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                             controllers.Assets.versioned(path="/public", file: Asset)