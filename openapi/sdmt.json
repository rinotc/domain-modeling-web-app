{
  "openapi": "3.0.3",
  "info": {
    "title": "sdmt api specifications",
    "description": "Title",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:9000/api/",
      "description": "local"
    }
  ],
  "paths": {
    "/bounded-contexts": {
      "post": {
        "summary": "境界づけられたコンテキスト作成",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BoundedContextResponse"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "operationId": "post-projects",
        "description": "新規のプロジェクトを作成する",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "description": "境界づけられたコンテキスト名称",
                    "writeOnly": true
                  },
                  "alias": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z]{1,32}$",
                    "minLength": 1,
                    "maxLength": 32,
                    "description": "境界づけられたコンテキストのエイリアス",
                    "writeOnly": true
                  },
                  "overview": {
                    "type": "string",
                    "minLength": 0,
                    "maxLength": 500,
                    "description": "境界づけられたコンテキストの概要",
                    "writeOnly": true
                  }
                },
                "required": [
                  "name",
                  "alias",
                  "overview"
                ]
              }
            }
          },
          "description": "新規プロジェクト情報"
        }
      },
      "get": {
        "summary": "境界づけられたコンテキスト一覧取得",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/BoundedContextResponse"
                      }
                    }
                  },
                  "required": [
                    "data"
                  ]
                }
              }
            }
          }
        },
        "operationId": "get-projects",
        "description": "プロジェクト一覧を取得する"
      },
      "parameters": []
    },
    "/bounded-contexts/{alias}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "alias",
          "in": "path",
          "required": true,
          "description": "境界づけられたコンテキストのエイリアス"
        }
      ],
      "get": {
        "summary": "境界づけられたコンテキストの取得",
        "tags": [
          "Project"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BoundedContextResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "operationId": "get-bounded-contexts-alias",
        "parameters": [],
        "description": "エイリアスを元に、プロジェクト情報を取得する"
      }
    },
    "/bounded-contexts/{boundedContextId}/domain-models": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "boundedContextId",
          "in": "path",
          "required": true,
          "description": "境界づけられたコンテキストID"
        }
      ],
      "post": {
        "summary": "ドメインモデルの作成",
        "tags": [
          "DomainModel"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DomainModelResponse"
                }
              }
            }
          }
        },
        "operationId": "post-bounded-contexts-boundedContextId-domain-models",
        "description": "境界づけられたコンテキストにおけるドメインモデルを作成する",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "japaneseName": {
                    "type": "string",
                    "description": "ドメインモデル日本語名",
                    "maxLength": 50
                  },
                  "englishName": {
                    "type": "string",
                    "description": "ドメインモデル英語名（境界づけられたコンテキスト内で一意）",
                    "maxLength": 100
                  },
                  "specification": {
                    "type": "string",
                    "description": "仕様"
                  }
                },
                "required": [
                  "japaneseName",
                  "englishName",
                  "specification"
                ]
              }
            }
          },
          "description": "新しいドメインモデル"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BoundedContextResponse": {
        "title": "BoundedContextResponse",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "境界づけられたコンテキストID",
            "format": "uuid",
            "readOnly": true
          },
          "alias": {
            "type": "string",
            "description": "境界づけられたコンテキストエイリアス",
            "example": "ALIAS",
            "minLength": 1,
            "maxLength": 32,
            "pattern": "^[0-9a-zA-Z]{1,32}$"
          },
          "name": {
            "type": "string",
            "description": "境界づけられたコンテキスト名称",
            "minLength": 1,
            "maxLength": 100
          },
          "overview": {
            "type": "string",
            "description": "境界づけられたコンテキスト概要",
            "minLength": 0,
            "maxLength": 500
          }
        },
        "required": [
          "id",
          "alias",
          "name",
          "overview"
        ],
        "x-tags": [
          "BoundedContext"
        ],
        "description": ""
      },
      "ErrorResponse": {
        "title": "ErrorResponse",
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "エラーメッセージ"
          }
        },
        "required": [
          "message"
        ]
      },
      "DomainModelResponse": {
        "title": "DomainModelResponse",
        "type": "object",
        "x-tags": [
          "DomainModel"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ドメインモデルID",
            "readOnly": true
          },
          "boundedContextId": {
            "type": "string",
            "format": "uuid",
            "description": "境界づけられたコンテキストID",
            "readOnly": true
          },
          "japaneseName": {
            "type": "string",
            "description": "ドメインモデル日本語名",
            "maxLength": 50,
            "readOnly": true
          },
          "englishName": {
            "type": "string",
            "description": "ドメインモデル英語名",
            "maxLength": 100,
            "readOnly": true
          },
          "specification": {
            "type": "string",
            "description": "ドメインモデルの仕様（Markdown形式）",
            "readOnly": true
          }
        },
        "required": [
          "id",
          "boundedContextId",
          "japaneseName",
          "englishName",
          "specification"
        ],
        "description": "ドメインモデルのレスポンス"
      }
    }
  }
}